<%- include('../partials/_head') %>
    <%- include('../partials/_nav') %>

        <div class="container cont1 animate__animated animate__flipInY">
            <div class="card card1">
                <div class="card-head bg-dark">
                    <h2>Editar Componente</h2>
                </div>
                <div class="card-body">
                    <form action="/updateComp/<%= data.componenete_id %>" method="POST">
                        <div class="form-group mb-4">
                            <input type="text" name="tipo" placeholder="Tipo" class="form-control" value="<%= data.tipo %>" required>
                        </div>
                        <div class="form-group mb-4">
                            <input type="text" name="marca" placeholder="Marca" class="form-control" value="<%= data.marca %>" required>
                        </div>
                        <div class="form-group mb-4">
                            <input type="text" name="modelo" placeholder="Modelo" class="form-control" value="<%= data.modelo %>" required>
                        </div>
                        <div class="form-group mb-4">
                            <select class="form-select" name="estado" aria-label="Estado">
                                <option selected><%= data.estado %></option>
                                <option value="Bueno">Bueno</option>
                                <option value="Mal">Mal</option>
                              </select>
                        </div>
                        <div class="form-group mb-4">
                            <input type="text" name="pc" placeholder="Pc" class="form-control" value="<%= data.Pc %>" required>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-dark">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        <%- include('../partials/_footer') %>