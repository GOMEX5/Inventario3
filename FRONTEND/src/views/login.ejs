<%- include('partials/_head') %>
    <header>
        <nav class="navbar nav navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid nv">
                <a href="/" class="navbar-brand navTitle">
                    <%= title %>
                </a>
        </nav>
    </header>

    <div class="container cont animate__animated animate__flipInY">
        <div class="card card1">
            <div class="card-head bg-dark">
                <h2>Inicio de secion</h2>
            </div>
            <div class="card-body">
                <form action="/logiar" method="POST">
                    <div class="form-group mb-4">
                        <input type="text" name="user" placeholder="Nombre de Usuario" class="form-control" required>
                    </div>
                    <div class="form-group mb-4">
                        <input type="password" name="password" placeholder="Password" class="form-control" required>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-dark">Entrar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <%- include('partials/_footer') %>